@model Captone.Models.CoachType

@{
    ViewBag.Title = "Loại xe";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                <fieldset>
                    <legend>Thông tin loại xe</legend>
                    <blockquote>
                        <div class="display-label">
                            @Html.LabelFor(model => model.Seats)
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Seats)
                        </div>
                        <div class="display-label">
                            @Html.LabelFor(model => model.Capacity)
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Capacity)
                        </div>
                    </blockquote>
                </fieldset>
                <p>
                    <a href="/CoachType/Edit/@Model.CoachTypeID">
                        <button type="button" class="btn btn-primary">Chỉnh sửa thông tin </button>
                    </a>
                    <a href="/CoachType/Index">
                        <button type="button" class="btn btn-info">Quay lại danh sách</button>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

