@{
    ViewBag.Title = "Administrator";
    Layout = null;
}
	<link rel="stylesheet" href="~/Content/Css/admin/reset.css">
	<link rel="stylesheet" href="~/Content/Css/admin/animate.css">
	<link rel="stylesheet" href="~/Content/Css/admin/styles.css">
	<script src="~/Content/js/jquery-1.10.2.js"></script>
        <div id="container">
            <img src="~/Content/img/Administrator-icon.png" style="padding-top: 20px"/>
            <div>
                <label>Username:</label>
                <input type="text" id="Username" autofocus="">
                <label>Password:</label>
                <input type="password" id="Password" value="">
                <div id="lower">
                    <input type="button" value="Hủy bỏ" style="width: 120px" onclick="window.location.href = '/Home/Index'">
                    <input type="submit" value="Đăng nhập" style="width: 120px" onclick="CheckLogin()" />
                </div>
            </div>
        </div>
	<script type="text/javascript">
	    function CheckLogin() {
	        var username = document.getElementById('Username').value;
	        var password = document.getElementById('Password').value;
	        $.ajax({
	            url: "/Admin/LogIn",
	            type: "POST",
	            data: { Username: username, Password: password },
	            success: function (result) {
	                if (result) {
	                    location.href = "/Fee/Index";
	                }
	            }
	        });
	    }
     </script>
	
	
	
	
		
	