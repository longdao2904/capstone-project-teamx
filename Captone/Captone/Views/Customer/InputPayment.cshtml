@model Captone.Models.Invoice

@{
    ViewBag.Title = "InputPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-8">
    <div id="review">
    </div>
    <b><p class="pContent">Thông tin hóa đơn</p></b>
    <p></p>
    <div class="border" style="height: 500px">
        <div style="margin-left: 70px;margin-top: 25px;" >
            <div class="each-field">
                Mã giao dịch
                <br />
                <input type="text" name="Weight" id="RequestCode" class="form-control" value="@Model.Request.RequestCode" readonly="readonly"/>
            </div>
            <div class="each-field">
                Khách hàng
                <br />
                <input type="text" name="Weight" id="Username" class="form-control" value="@Model.Request.Username" readonly="readonly"/>
            </div>
            <div class="each-field">
                Khối lượng món hàng (kg)
                <br />
                <input type="text" name="Weight" id="Weight" class="form-control" value="@Model.Weight" readonly="readonly"/>
            </div>
            <div class="each-field">
                Thể tích món hàng
                <br />
                <input type="text" name="Volume" id="Volume"  class="form-control" value="@Model.Volume" readonly="readonly"/>
            </div>
            <div class="each-field">
                Giá món hàng (VNĐ)
                <input type="text" name="Price" id="Price" class="form-control" value="@Model.Price" readonly="readonly"/>
            </div>
            <div class="each-field">
                Ngày thanh toán
                <input type="text" name="Price" id="Day" class="form-control" value="@DateTime.Now.Date" readonly="readonly"/>
            </div>
            <div style="margin-left: 70px" >
                <button class="btn btn-success" id="@Model.Request.RequestID" onclick="window.location.href='/Customer/ReviewInfor?RequestID=@Model.Request.RequestID'" title="Bấm vào để tiến hành thanh toán">Hoàn tất</button>
                <button class="btn btn-success" style="margin-left: 10px" onclick="window.location.href='/Customer/Index'" title="Bấm vào để quay lại danh sách yêu cầu">Hủy bỏ</button>
            </div>
        </div>
        </div>
    </div>
<script type="text/javascript">
    function Review(id) {
        $.ajax({
            url: "/Customer/ReviewInfor",
            type: "POST",
            data: {RequestID : id},
            success: function (result) {
                $('#review').html(result);
                document.getElementById("RequestCode").value = "";
                document.getElementById("Username").value = "";
                document.getElementById("Weight").value = "";
                document.getElementById("Volume").value = "";
                document.getElementById("Price").value = "";
                document.getElementById("Day").value = "";
            }
        });
    }
</script>