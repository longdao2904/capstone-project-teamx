@model IEnumerable<Captone.Models.Station>
<script src="~/Content/TableJS/jquery.dataTables.js"></script>
<script src="~/Content/TableJS/KeyTable.js"></script>
@{
    ViewBag.Title = "Danh sách các trạm";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                <p>
                    <a data-toggle="modal" id="" data-target="#myModal" class="btn btn-outline btn-primary" onclick="CreateStation()">Tạo trạm mới</a>
                </p>
                <div class="table-responsive">
                    <table class="table display KeyTable dataTable" id="TableStations" aria-describedby="example_info">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.StationName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StationLocation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BreakTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StationPhone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StationName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StationLocation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BreakTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StationPhone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        <a href="/Station/Edit/@item.StationID"><i class="fa fa-edit fa-fw"></i></a>|
                            <a href="/Station/Details/@item.StationID"><i class="fa fa-info fa-fw"></i></a>|
                            <a href="/Station/Delete/@item.StationID"><i class="fa fa-minus-square fa-fw"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Thông tin trạm mới</h4>
            </div>
            <div class="modal-body bodyFix">
                <div id="modal">
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script>
    window.onload = loadTable();

    function loadTable() {
        var oTable = $('#TableStations').dataTable();

        $.extend($.fn.dataTable.defaults, {
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bInfo": true,
            "sPaginationType": "full_numbers"
        });

        var keys = new KeyTable({
            "table": document.getElementById('TableStations'),
            "datatable": oTable,
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bInfo": true,
            "bAutoWidth": false
        });
    }

    function CreateStation() {
        $.ajax({
            url: "/Station/Create",
            type: "Get",
            success: function (result) {
                $("#modal").html(result);
            }
        });
    }
</script>
<style type="text/css">
    .bodyFix {
        height: 100%;
        overflow: scroll;
    }
    .modal-title {
        font-weight:bolder;
    }
</style>
