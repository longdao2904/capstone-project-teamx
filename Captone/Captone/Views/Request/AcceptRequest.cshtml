@model IEnumerable<Captone.Models.Request>
@{
    ViewBag.Title = "AcceptRequest";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <th>Tên 
            </th>
            <th>Ngày gửi
            </th>
            <th>Trạm gửi
            </th>
            <th>Trạm nhận
            </th>
            <th>Trạng thái
            </th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Username</td>
                    <td>@item.DateRequest</td>
                    <td>@item.Station.StationName</td>
                    <td>@item.Station1.StationName</td>
                    <td>@item.DeliveryStatu.StatusName</td>
                    <td><a data-toggle="modal" id="@item.RequestID" data-target="#myModal" class="btn btn-primary btn-large" onclick="invoice(this.id)">Nhập hoá đơn</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Hoá đơn</h4>
                </div>
                <div class="modal-body">
                    <div id="invoice-content">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>
<script type="text/javascript">
    function invoice(id) {
        $.ajax({
            url: "/Request/InputInvoice",
            type: "POST",
            data: { RequestID: id },
            success: function (result) {
                $('#invoice-content').html(result);
            }
        });
    }

</script>
