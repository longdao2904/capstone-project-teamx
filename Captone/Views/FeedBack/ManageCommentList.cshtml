@model IEnumerable<Captone.Models.Comment>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<article class="module width_3_quater">
    <header style="text-align: center">
        <h3>Quản lí bình luận</h3>
    </header>
    <div class="module_content">
        <table class="tablesorter">
            <thead>
                <tr style="text-align: center">
                    <td>Khách hàng</td>
                    <td>Bình luận</td>
                    <td>Ngày bình luận</td>
                    <td>Trạm</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align: center">
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CommentContent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DatePost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StationID)
                        </td>
                        <td>
                           @* <a href="/FeedBack/Details/@item.CommentID">
                                <input type="image" src="~/Content/Images/Admin/icn_edit.png" title="Chi tiết"></a>*@
                            <a href="/FeedBack/DeleteComment/@item.CommentID">
                                <input type="image" src="~/Content/Images/Admin/icn_trash.png" title="Xoá"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="clear"></div>
    </div>
</article>
<!-- end of stats article -->
