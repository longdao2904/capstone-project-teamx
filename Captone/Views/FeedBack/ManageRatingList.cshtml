@model IEnumerable<Captone.Models.Station>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<article class="module width_3_quater">
    <header style="text-align: center">
        <h3>Quản lí đánh giá trạm</h3>
    </header>
    <div class="module_content">
        <table class="tablesorter">
            <thead>
                <tr style="text-align: center">
                    <td>Trạm</td>
                    <td>Đánh giá trung bình</td>               
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align: center">
                        <td>
                            @Html.DisplayFor(modelItem => item.StationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AvgRatingLevel)
                        </td>                    
                        <td>
                            <a href="/FeedBack/ClearRating/@item.StationID">
                                <input type="image" src="~/Content/Images/Admin/icn_trash.png" title="Xoá"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="clear"></div>
    </div>
</article>
<!-- end of stats article -->