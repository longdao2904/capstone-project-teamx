@model IEnumerable<Captone.Models.Request>
@{
    ViewBag.Title = "Trễ hạn thanh toán";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    int stationId = Convert.ToInt32(Session["StationID"]);
}

<h3 style="color: orange">Các yêu cầu đã trễ hạn thanh toán</h3>
<div class="table-responsive" id="RequestList">
    <table class="table-bordered table-striped table display KeyTable dataTable" id="TableRequest" aria-describedby="example_info">
        <thead>
            <tr>
                <th>Mã hàng</th>
                <th>Người gửi</th>
                <th>Địa chỉ gửi</th>
                <th>Điện thoại người gửi</th>
                <th>Ngày gửi yêu cầu</th>
                <th>Hạn chót thanh toán</th>
                <th>Quản lý</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.RequestCode</td>
                    <td>@request.SenderName</td>
                    <td>@request.SenderAddress</td>
                    <td>@request.SenderPhone</td>
                    <td>@request.DateRequest</td>
                    <td>@request.DateRequest.AddDays(1)</td>
                    <td>
                        <button onclick="Update(@request.RequestID)" class="btn btn-success btn-circle" data-toggle="tooltip" data-placement="top" title="Gia hạn thanh toán"><i class="fa fa-link"></i></button>
                        <button onclick="DeleteRequest(@request.RequestID)" class="btn btn-warning btn-circle" data-toggle="tooltip" data-placement="top" title="Xóa yêu cầu"><i class="fa fa-times"></i></button>
                        <input id="requestID" value="@request.RequestID" hidden=""/>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function DeleteRequest(id) {
        $.ajax({
            url: "/Request/DeleteRequest",
            type: "POST",
            data: { id: parseInt(id) },
            success: function() {
                window.location.href = '/Request/LatePayment?stationID=@stationId';
            }
        });
    }
    function Update(id) {
        $.ajax({
            url: "/Request/UpdateDatePostForRequest",
            type: "POST",
            data: { requestID: parseInt(id) },
            success: function () {
                    window.location.href = '/Request/LatePayment?stationID=@stationId';
            }
        });
    }
</script>
