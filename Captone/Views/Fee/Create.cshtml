@model Captone.Models.ManageFee

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend style="font-size: 18px; color: blue">Tạo mức phí mới</legend>
        <div class="editor-label">
            Mức phí
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Fee)
            @Html.ValidationMessageFor(model => model.Fee)
        </div><br/>
        <div class="editor-label">
           Khối lượng chặn dưới
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MinWeight)
            @Html.ValidationMessageFor(model => model.MinWeight)
        </div><br/>
        <div class="editor-label">
           Khối lượng chặn trên
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxWeight)
            @Html.ValidationMessageFor(model => model.MaxWeight)
        </div><br/>
        <div class="editor-label">
            Thể tích chặn dưới
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MinVolume)
            @Html.ValidationMessageFor(model => model.MinVolume)
        </div><br/>
        <div class="editor-label">
            Thể tích chặn trên
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxVolume)
            @Html.ValidationMessageFor(model => model.MaxVolume)
        </div><br/>
    </fieldset>
<br/>
}
<input type="submit" value="Tạo mới" />   @Html.ActionLink("Quay lại danh sách", "Index")
