@model IEnumerable<Captone.Models.Request>

@{
    ViewBag.Title = "Các yêu cầu chuyển phát";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <p>@Html.ActionLink("Yêu cầu chuyển phát mới", "Create")</p>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs">
                <li class="active"><a href="#pending" data-toggle="tab">Chờ xác nhận </a>
                </li>
                <li><a href="#transitted" data-toggle="tab">Đã chuyển đi</a>
                </li>
                <li><a href="#arrived" data-toggle="tab">Đã đến trạm đích</a>
                </li>
                <li><a href="#delivered" data-toggle="tab">Đã giao hàng</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane fade in active" id="pending">
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DeliveryStatu.StatusName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ManageFee.Fee)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateRequest)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DeliveryStatu.StatusName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ManageFee.Fee)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateRequest)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        <a href="/Request/Edit/@item.RequestID"><i class="fa fa-edit fa-fw"></i></a>|
                            <a href="/Request/Details/@item.RequestID"><i class="fa fa-info fa-fw"></i></a>|
                            <a href="/Request/Delete/@item.RequestID"><i class="fa fa-minus-square fa-fw"></i></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="transitted">
