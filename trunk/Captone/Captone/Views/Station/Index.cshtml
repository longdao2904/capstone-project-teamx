@model IEnumerable<Captone.Models.Station>

@{
    ViewBag.Title = "Danh sách các trạm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                <p>
                    <i class="fa fa-plus-square"></i> @Html.ActionLink("Thêm trạm mới", "Create")
                </p>
                <div>
                    @{
                        Captone.Models.Station station = new Captone.Models.Station();
                    }
                    @{
                        var grid = new WebGrid(Model, canPage: true, rowsPerPage: 5, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
                        grid.Pager(WebGridPagerModes.NextPrevious);}
                    <div id="gridContent" class="table-responsive">
                        @grid.GetHtml(tableStyle: "webGrid",
                    headerStyle: "header",
                    selectedRowStyle: "select",
                    columns: grid.Columns(
                    grid.Column("Trạm", format: (item) => item.GetSelectLink(item.StationName.ToString())),
                    grid.Column("StationLocation", "Địa chỉ"),
                    grid.Column("BreakTime", "Thời gian dừng nghỉ"),
                    grid.Column("StationPhone", "Số điện thoại"),
                    grid.Column("Description", "Thông tin thêm")
                    
                    ))
                        @if (grid.HasSelection)
                        {
                            station = (Captone.Models.Station)grid.Rows[grid.SelectedIndex].Value;
                            <p><b>Trạm:</b> @station.StationName</p>
                            <p><b>Địa chỉ:</b> @station.StationLocation</p>
                            <p><b>Thời gian dừng nghỉ:</b> @station.BreakTime</p>
                            <p><b>Số điện thoại:</b> @station.StationPhone</p>
                            <p><b>Thông tin thêm:</b> @station.Description</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
