@model Captone.Models.InvoiceModel

<div class="headerH2">
        <b><p class="pContent">Payment summary</p></b>
        <p></p>
    </div>
<div class="table-responsive" >
    <table class="table">
        <tr style="background-color: aquamarine">
        <th>Mã giao dịch
        </th>
        <th>Khách hàng
        </th>
        <th>Khối lượng (kg)
        </th>
        <th>Thể tích (m3)
        </th>
        <th>Đơn giá (VNĐ)
        </th>
        <th>Ngày giao dịch
        </th>
        </tr>
        <tbody>
            <td>
                @Model.Request.RequestCode
            </td>
            <td>
                @Model.Request.ReceiverName
            </td>
            <td>
                @Model.Invoice.Weight
            </td>
            <td>
                @Model.Invoice.Volume
            </td>
            <td>
                @Model.Invoice.Price
            </td>
            <td>
                @DateTime.Now
            </td>
        </tbody>
    </table>
</div>
<img src="~/Content/img/paypal.png" style="height: 30px; width: 150px" onclick="window.location.href='../Paypal/ValidateCommand'" title="Bấm vào để đến trang thanh toán"/>