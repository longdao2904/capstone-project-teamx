@model Captone.Models.Trip

@{
    ViewBag.Title = "Thêm chuyến mới";
}
<script src="~/Content/ui/jquery-ui.js"></script>
<link rel="stylesheet" href="~/Content/themes/base/jquery-ui.css">
<div class="row">
    <div class="col-md-12">
        <div class="row show-grid"></div>
        <div class="panel panel-primary">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                <div class="col-md-6">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)

                        <fieldset>
                            <legend>Thông tin chuyến mới</legend>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Date)
                            </div>
                            <div class="editor-field">
                                <input type="text" id="datepicker" name="Date" class="form-control" onchange="listTrip(this.value);" />
                                @Html.ValidationMessageFor(model => model.Date)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Route.RouteName)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownList("RouteID", String.Empty)
                                @Html.ValidationMessageFor(model => model.Route.RouteName)
                            </div>
                            <br />
                            <p>
                                <input type="submit" value="Tạo mới" class="btn btn-primary" onclick="SentObject()" />
                                <input type="button" value="Quay lại danh sách" class="btn btn-info" onclick="window.location.href = '/Trip/Index'" />
                            </p>
                        </fieldset>
                    }
                </div>
                <div class="col-md-4">
                    <div id="samedateTrip"></div>
                </div>
                <div class="col-md-8">
                    <div id="schedule"></div>
                </div>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    window.onload = initialize();

    function initialize() {
        $("input").addClass("form-control");
        $("select").addClass("form-control");
        DatePicker();
        listOnRoute(0);
    }

    function listTrip(value) {
        $.ajax({
            url: "/Trip/ListTrip",
            type: "POST",
            data: { tripDate: value },
            success: function (result) {
                $("#samedateTrip").html(result);
            }
        });
    }

    function listOnRoute(route) {
        $.ajax({
            url: "/Schedule/SchedulePartialView",
            type: "Post",
            data: { routeID: route },
            success: function (result) {
                $("#schedule").html(result);
            }
        });
    }

    $('#RouteID').on('change', function () {
        listOnRoute($('#RouteID').val())
    });

    function DatePicker() {
        $("#datepicker").datepicker({ dateFormat: "yy/mm/dd" });
    };

    // Get schedule objects
    function getScheduleObject() {
        var schedules = [];
        $('[name="1"]:checked').each(function () {
            var row = $(this).closest('tr');
            var sch = {
                // cột 1 là ScheduleID, lấy value từ cột 2
                // sử dụng row.find('#idCol') / row.find('#nameCol')
                ScheduleID: row.find('td:nth-child(2)').text(),
                RouteID: $('#RouteID').val(),
                CoachID: row.find('td:nth-child(4)').text(),
                EstimateDepartureTime: row.find('td:nth-child(7)').text(),
                EstimateArrivalTime: row.find('td:nth-child(8)').text(),
                EstimateVolume: row.find('td:nth-child(9)').text(),
                Date: $('#datepicker').val()
            };
            // Push schedule object to collection
            schedules.push(sch);
        });
        return schedules;
    }

    // Sent schedule objects to controller
    function SentObject() {
        var trips = getScheduleObject();
        $.ajax({
            url: "/Trip/Create",
            type: "POST",
            data: JSON.stringify({trips : trips }),
            contentType: "application/json",
            dataType: "json",
            success: function (result) {
            }
        });
    }
</script>
