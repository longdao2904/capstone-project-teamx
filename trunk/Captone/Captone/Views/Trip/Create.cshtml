@model Captone.Models.Trip

@{
    ViewBag.Title = "Thêm chuyến mới";
}
<script src="~/Content/ui/jquery-ui.js"></script>
<link rel="stylesheet" href="~/Content/themes/base/jquery-ui.css">
<div class="row">
    <div class="col-md-12">
        <div class="row show-grid"></div>
        <div class="panel panel-primary">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                <div class="col-md-6">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)

                        <fieldset>
                            <legend>Thông tin chuyến mới</legend>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Date)
                            </div>
                            @*<div class="editor-field">*@
                            <input type="text" id="datepicker" name="Date" class="form-control" onchange="loadList(this.value)" />
                            @*@Html.ValidationMessageFor(model => model.Date)
                        </div>*@

                            <br />
                            <p>
                                <input type="button" value="Tạo mới" class="btn btn-primary" onclick="SentObject()" />
                                <input type="button" value="Quay lại danh sách" class="btn btn-info" onclick="window.location.href = '/Trip/Index'" />
                            </p>
                        </fieldset>
                    }
                </div>
                <div class="col-md-4">
                    <div id="samedateTrip"></div>
                </div>
                <div class="col-md-8">
                    <div id="schedule"></div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    function changeClass() {
        $("input").addClass("form-control");
        $("select").addClass("form-control");
        DatePicker();
    }
    function loadList(value) {
        listTrip(value);
        listTimetable();
    }
    function listTrip(value) {
        $.ajax({
            url: "/Trip/ListTrip",
            type: "Post",
            data: { tripDate: value },
            success: function (result) {
                $("#samedateTrip").html(result);
            }
        });
    }
    function listTimetable() {
        $.ajax({
            url: "/Schedule/SchedulePartialView",
            type: "Get",
            success: function (result) {
                $("#schedule").html(result);
            }
        });
    }
    var pickerOpt = { dateFormat: "dd/mm/yy" }
    function DatePicker() {
        $("#datepicker").datepicker(pickerOpt);
    };
    window.onload = changeClass();

    // Get schedule objects
    function getScheduleObject() {
        var schedules = [];
        $('[name="ScheduleID"]:checked').each(function () {
            var row = $(this).closest('tr');
            var sch = {
                // cột 1 là ScheduleID, lấy value từ cột 2
                // sử dụng row.find('#idCol') / row.find('#nameCol')
                ScheduleID: row.find('td:nth-child(1)').text(),
                RouteName: row.find('td:nth-child(2)').text(),
                NumberPlate: row.find('td:nth-child(3)').text(),
                EstimateDepartureTime: row.find('td:nth-child(4)').text(),
                EstimateArrivalTime: row.find('td:nth-child(5)').text(),
                EstimateVolume: row.find('td:nth-child(6)').text(),
                Date: $('#datepicker').val()
            };
            // Push schedule object to collection
            schedules.push(sch);
        });
        console.log(schedules);
        return schedules;
    }

    // Sent schedule objects to controller
    function SentObject() {
        var schedule = getScheduleObject();
        $.ajax({
            url: "/Trip/Create",
            type: "Post",
            data: { Trip: schedule }
        });
    }
</script>
