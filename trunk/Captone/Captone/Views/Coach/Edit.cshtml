@model Captone.Models.Coach

@{
    ViewBag.Title = "Edit Coach Info";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Coach</legend>

        @Html.HiddenFor(model => model.CoachID)

        <div class="editor-label">
            @Html.LabelFor(model => model.NumberPlate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumberPlate)
            @Html.ValidationMessageFor(model => model.NumberPlate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RouteID)
        </div>
        <div class="editor-field">
            @Html.DropDownList("RouteID", String.Empty)
            @Html.ValidationMessageFor(model => model.RouteID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CoachTypeID, "CoachType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CoachTypeID", String.Empty)
            @Html.ValidationMessageFor(model => model.CoachTypeID)
        </div>
        <br />
        <p>
            <input type="submit" class="btn btn-primary" value="Save" />
            <a href="/Coach/Index"><input type="button" class="btn btn-info" value="Back to list" /></a>
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
