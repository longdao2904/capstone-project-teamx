@model Captone.Models.Request

@{
    ViewBag.Title = "Thông tin chi tiết chuyển phát";
}

<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Thông tin chi tiết chuyển phát
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <blockquote>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.Account.Username)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.Account.Username)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.SenderAddress)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.SenderAddress)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.SenderPhone)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.SenderPhone)
                            </div>
                            <br />
                            <br />
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.DeliveryStatu.StatusName)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.DeliveryStatu.StatusName)
                            </div>
                        </blockquote>
                    </div>
                    <div class="col-lg-6">
                        <blockquote>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.ReceiverName)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.ReceiverName)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.ReceiverAddress)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.ReceiverAddress)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.ReceiverPhone)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.ReceiverPhone)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.ManageFee.Fee)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.ManageFee.Fee)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.EstimateWeight)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.EstimateWeight)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.EstimateVolume)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.EstimateVolume)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.DateRequest)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.DateRequest)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.Description)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.Description)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.Station.StationName)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.Station.StationName)
                            </div>
                            <div class="display-label">
                                @Html.DisplayNameFor(model => model.Station1.StationName)
                            </div>
                            <div class="display-field">
                                @Html.DisplayFor(model => model.Station1.StationName)
                            </div>
                        </blockquote>
                    </div>
                </div>
                <br />
                <p>
                    <a href="/Request/Edit/@Model.RequestID">
                        <input type="button" class="btn btn-primary" value="Edit" /></a>
                    @if ((string)Session["UserRole"] == "Customer")
                    {
                        <a href="/Home/LoadRequest">
                            <input type="button" class="btn btn-info" value="Quay lại danh sách" /></a>
                    }
                    else
                    {
                        <a href="/Request/Index">
                            <input type="button" class="btn btn-info" value="Quay lại danh sách" /></a>
                    }
                </p>
            </div>
        </div>
    </div>
</div>
