@model IEnumerable<Captone.Models.Route>

@{
    ViewBag.Title = "Danh sách các tuyến";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <i class="fa fa-plus-square"></i> @Html.ActionLink("Tạo một tuyến mới", "Create")
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RouteName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Station1.StationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Station.StationName)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.AvgRateLevel)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Distance)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RouteName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Station1.StationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Station.StationName)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.AvgRateLevel)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Distance)
                        </td>
                        <td>
                            <a href="/Route/Edit/@item.RouteID"><i class="fa fa-edit fa-fw"></i></a>|
                            <a href="/Route/Details/@item.RouteID"><i class="fa fa-info fa-fw"></i></a>|
                            <a href="/Route/Delete/@item.RouteID"><i class="fa fa-minus-square fa-fw"></i></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
