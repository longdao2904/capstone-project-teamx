@model Captone.Models.Station

@{
    ViewBag.Title = "Xóa trạm";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                <fieldset>
                    <legend>Bạn muốn xóa trạm @Model.StationName ?</legend>
                    <blockquote>
                        <div class="display-label">
                            @Html.DisplayNameFor(model => model.StationName)
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.StationName)
                        </div>

                        <div class="display-label">
                            @Html.DisplayNameFor(model => model.StationLocation)
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.StationLocation)
                        </div>

                        <div class="display-label">
                            @Html.DisplayNameFor(model => model.StationPhone)
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.StationPhone)
                        </div>
                    </blockquote>
                </fieldset>
                @using (Html.BeginForm())
                {
                    <p>
                        <button type="submit" class="btn btn-danger">Xóa trạm này</button>
                        <button type="button" class="btn btn-info" onclick="window.location.href='/Station/Index'">Quay lại danh sách</button>
                    </p>
                }
            </div>
        </div>
    </div>
</div>

