@model Captone.Models.CoachType

@{
    ViewBag.Title = "Thay đổi thông tin loại xe";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)

                    <fieldset>
                        <legend>Chi tiết loại xe</legend>

                        @Html.HiddenFor(model => model.CoachTypeID)


                        <div class="editor-label">
                            @Html.LabelFor(model => model.Seats)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Seats)
                            @Html.ValidationMessageFor(model => model.Seats)
                        </div>
                        <br />
                        <p>
                            <button type="submit" class="btn btn-primary">Lưu thông tin </button>
                            <button type="button" class="btn btn-info" onclick="window.location.href = '/CoachType/Index'">Quay lại danh sách</button>
                        </p>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    function changeClass() {
        $("input").addClass("form-control");
        $("select").addClass("form-control");
    }

    window.onload = changeClass();
</script>
