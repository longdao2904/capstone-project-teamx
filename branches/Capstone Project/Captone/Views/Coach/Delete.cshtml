@model Captone.Models.Coach

@{
    ViewBag.Title = "Xóa xe";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}
<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                <fieldset>
                    <legend>Bạn có muốn xóa xe @Model.NumberPlate khỏi hệ thống ?</legend>
                    <blockquote>
                        <div class="display-label">
                            <strong>Biển số xe: </strong>
                            @Html.DisplayFor(model => model.NumberPlate)
                        </div>      
                        <div class="display-label">
                           <strong>Loại xe: </strong>
                            @Html.DisplayFor(model => model.CoachType.Seats) chỗ ngồi
                        </div>         
                        <div class="display-label">
                            <strong>Sức chứa: </strong>
                            @Html.DisplayFor(model => model.CoachType.Capacity)
                        </div>
                    </blockquote>
                </fieldset>
                <br />
                @using (Html.BeginForm())
                {
                    <p>
                        <button type="submit" class="btn btn-danger">Xóa xe này</button>
                        <button type="button" class="btn btn-info" onclick="window.location.href='/Coach/Index'"> Quay lại danh sách</button>
                    </p>
                }
            </div>
        </div>
    </div>
</div>

