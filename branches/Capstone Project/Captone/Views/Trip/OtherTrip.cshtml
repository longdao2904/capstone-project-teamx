@model IEnumerable<Captone.Models.Trip>
@{
    Layout = null;
    int stationId = Convert.ToInt32(Session["StationID"]);
    var date = DateTime.Now;
}
<input type="hidden" id="stationId" value="@stationId"/>
<input type="hidden" id="timenow" value="@date"/>
<div class="table-responsive" id="TripCheck">
    <table class="table table-bordered display KeyTable dataTable" id="TableDepartedTrip" aria-describedby="example_info">
        <thead>
            <tr>
                <th>Tuyến
                </th>
                <th>Xe
                </th>
                <th>Giờ đi       
                </th>
                <th>Giờ đến dự kiến
                </th>
                <th>
                    Trạng thái
                </th>
                 <th style="display: none"></th>
                <th style="display: none"></th>
              <th  style="display: none">
                    <input type="checkbox" id="selectallTrip" value="Select All"  style="display: none"/></th>
             
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="trip-@item.TripID">
                    <td style="display: none">
                        @item.TripID
                    </td>
                    <td>
                        @item.Schedule.Route.RouteName
                    </td>
                    <td>
                   <a data-toggle="modal" id="@item.TripID" data-target="#myModal" onclick="AssignedRequest2(@item.TripID)">@item.Schedule.Coach.NumberPlate</a>
                    </td>
                    <td>
                        @item.RealDepartureTime
                    </td>
                    <td>
                        @item.EstimateArrivalTime
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td></td>
                      <td  style="display: none" >
                        <input type="checkbox" name="CheckTrip" class="case1"  style="display: none" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content detailPopup">
            <div class="modal-header">
                <button type="button" id="close2" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Các gói hàng trên chuyến này</h4>
            </div>
            <div class="modal-body">
                <div id="requests">
                </div>
            </div>
            <div class="modal-footer">
             <a class="btn btn-success" id="AcceptGo" onclick="ArrivedRequest()">Xác nhận đến trạm</a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script>
    $(function() {
        loadTable();
    });

    function loadTable() {
        var oTable = $('#TableDepartedTrip').dataTable();

        $.extend($.fn.dataTable.defaults, {
            "bSort": true,
            "sPaginationType": "full_numbers"
        });

        var keys = new KeyTable({
            "table": document.getElementById('TableDepartedTrip'),
            "datatable": oTable,
            "bSort": true,
            "sPaginationType": "full_numbers"
        });
    }
    $(document).ready(function () {
        $('#selectall').click(function (event) {  //on click 
            if (this.checked) { // check select status
                $('.case').each(function () { //loop through each checkbox
                    this.checked = true;  //select all checkboxes with class "checkbox1"  
                });
            } else {
                $('.case').each(function () { //loop through each checkbox
                    this.checked = false; //deselect all checkboxes with class "checkbox1"                 
                });
            }
        });

    });
    // change request status when checkbox 'arrived' checked
    function getRequests() {
        var listRq = [];
        $('[name="chk"]:checked').each(function () {
            var row = $(this).closest('tr');
            var rq = document.getElementById("rqID").innerText;
            // Push request object to collection
            listRq.push(rq);
        });
        return listRq;
    }
    // Sent request collection to controller
    function SentObject() {
        var requests = getRequests();
        $.ajax({
            url: "/Request/UpdateStatus",
            type: "POST",
            data: JSON.stringify({ requestIDs: requests }),
            contentType: "application/json",
            dataType: "json",
            success: function (result) {
                window.location = "/Request/Index";
                window.addActive(5);
            }
        });
    }
    // Click on button 'Đã đến trạm'
    $('#sttSet').click(function () {
        SentObject();
    });
    // Get requests assigned to selected trip
    function AssignedRequest2(tripID) {
        $.ajax({
            url: "/Trip/AssignedRequest2",
            type: "Post",
            data: { tripID: tripID },
            success: function (result) {
                $("#requests").html(result);
            }
        });
    }
    var id;
    $("a").click(function (event) {
        id = event.target.id;
    });
    function ArrivedRequest() {
        var stationID = document.getElementById('stationId').value;
        var tripID = id;
        $.ajax({
            url: "/Trip/DepartedRequest",
            type: "Post",
            data: { tripID: tripID, stationID : stationID },
            success: function (result) {
                $("#close2").click();
                $("#start").click();
            }
        });
    }
    

  
</script>
<style type="text/css">
    .bodyFix {
        width: 768px;
        height: 380px;
        overflow: scroll;
        margin: auto;
    }

    .detailPopup {
        width: 768px;
        margin: auto;
    }

    .modal-title {
        font-weight: bolder;
    }
    .yellowClass {
        background-color: red;
    }
</style>
