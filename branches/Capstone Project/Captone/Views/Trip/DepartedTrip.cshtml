@model IEnumerable<Captone.Models.Trip>
@{
    Layout = null;
}

<div class="table-responsive">
    <table class="table table-bordered display KeyTable dataTable" id="TableDepartedTrip" aria-describedby="example_info">
        <thead>
            <tr>
                <th>Mã chuyến</th>
                <th>Tuyến
                </th>
                <th>Xe
                </th>
                <th>Giờ đi       
                </th>
                <th>Giờ đến dự kiến
                </th>
                <th>Quản lý</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.TripID
                    </td>
                    <td>
                        @item.Schedule.Route.RouteName
                    </td>
                    <td>
                      @item.Schedule.Coach.NumberPlate
                    </td>
                    <td>
                        
                        @item.RealDepartureTime
                    </td>
                    <td>
                        @item.EstimateArrivalTime
                    </td>
                    <td>
                        <a data-toggle="modal" id="" data-target="#departedTrip" class="btn btn-success" onclick="AssignedRequest2(@item.TripID)">Hàng trên chuyến</a>
                    </td>
              
                </tr>
            }
        </tbody>
    </table>
</div>
<div id="departedTrip" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content detailPopup">
            <div class="modal-header">
                <button type="button" id="close3" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Các gói hàng trên chuyến này</h4>
            </div>
            <div class="modal-body">
                <div id="rqfordepart">
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script>
    $(function() {
        var oTable = $('#TableDepartedTrip').dataTable();

        $.extend($.fn.dataTable.defaults, {
            "bSort": true,
            "sPaginationType": "full_numbers"
        });

        var keys = new KeyTable({
            "table": document.getElementById('TableDepartedTrip'),
            "datatable": oTable,
            "bSort": true,
            "sPaginationType": "full_numbers"
        });
    });
    $(document).ready(function () {
        $('#selectall').click(function (event) {  //on click 
            if (this.checked) { // check select status
                $('.case').each(function () { //loop through each checkbox
                    this.checked = true;  //select all checkboxes with class "checkbox1"  
                });
            } else {
                $('.case').each(function () { //loop through each checkbox
                    this.checked = false; //deselect all checkboxes with class "checkbox1"                 
                });
            }
        });

    });
    function AssignedRequest2(tripID) {
        $.ajax({
            url: "/Trip/AssignedRequest2",
            type: "Post",
            data: { tripID: tripID },
            success: function (result) {
                $("#rqfordepart").html(result);
            }
        });
    }
</script>
<style type="text/css">
    .bodyFix {
        width: 768px;
        height: 380px;
        overflow: scroll;
        margin: auto;
    }

    .detailPopup {
        width: 768px;
        margin: auto;
    }

    .modal-title {
        font-weight: bolder;
        color: blue;
    }
</style>
