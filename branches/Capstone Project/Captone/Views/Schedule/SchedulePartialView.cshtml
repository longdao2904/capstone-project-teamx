@model IEnumerable<Captone.Models.Schedule>

@{
    Layout = null;
}

<div class="table-responsive">
    <table class="table table-bordered" id="TableSchedules" >
        <thead>
            <tr>
                <th>
                    <input type="checkbox" name="chkAll" value="All" id="chkAll" />
                </th>
                <th>Tuyến
                </th>
                <th>Biển số
                </th>
                <th>Ước tính xuất bến
                </th>
                <th></th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="1" class="sid" />
                    </td>
                    <td style="display: none;">
                        @item.ScheduleID
                    </td>
                    <td style="display: none;">
                        @item.Route.RouteID
                    </td>
                    <td style="display: none;">
                        @item.Coach.CoachID
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Route.RouteName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coach.NumberPlate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstimateDepartureTime)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $("document").ready(function () {
        $("#chkAll").click(function () {
            var checked = $(this).is(':checked');
            $(".sid").attr("checked", checked);
        });
        $(".sid").click(function () {
            var valid = true;
            $(".sid").each(function () {
                var checked = $(this).is(':checked');
                if (!checked) {
                    valid = false;
                }
            });
            $("#chkAll").attr("checked", valid);
        });
    });

   
    
</script>

