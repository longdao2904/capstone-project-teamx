<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Core CSS - Include with every page -->
    <link href="~/Content/Css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/font-awesome/css/font-awesome.css">

    <!-- Page-Level Plugin CSS - Dashboard -->
    <link href="~/Content/Css/SentRequest.css" rel="stylesheet" />
    <!-- SB Admin CSS - Include with every page -->
    <link href="~/Content/css/sb-admin.css" rel="stylesheet">

    <link href="~/Content/Css/Ribbon.css" rel="stylesheet" />
    <script src="~/Content/js/jquery-1.10.2.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>
    <script src="~/Content/TableJS/jquery.dataTables.js"></script>
    <script src="~/Content/TableJS/KeyTable.js"></script>
    <script src="~/Content/js/jquery.bpopup.min.js"></script>
    <script src="~/Content/js/sb-admin.js"></script>
    <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{
        var Username = (string)Session["USERNAME"];
        var UserRole = (string)Session["UserRole"];
        int stationId = Convert.ToInt32(Session["StationID"]);
        var stationName = (string)Session["StationName"];
    }
</head>
<body>
    <input type="hidden" value="@Username" id="session" />
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="background-color: #428bca; height: 70px;" style="margin-bottom: 0">
            <!-- /.navbar-header -->
            <div class="col-lg-4" id="truck">
                <a class="navbar-brand" href="/Home/Index" style="color: white"><i class="fa fa-truck fa-3x">i-Deliver</i></a>
            </div>
            <div class="col-lg-4" style="margin-top: 0.5%"></div>
            <div class="col-lg-4">
                @if (Username != null)
                {
                    string username = Username.ToUpper();
                <div class="nav navbar-top-links navbar-right" style="margin-top: 1%;">
                    <p style="color: white; float: right">
                        <i class="fa fa-user fa-fw"></i>@username |
                        <a href="/Account/LogOff" style="color: white"><i class="fa fa-sign-out"></i>Đăng xuất</a>
                    </p>
                    <br />
                    <p style="color: white; float: right">Nhân viên trạm @stationName</p>
                </div>
                }
                else
                {
                <a style="color: white" class="nav navbar-top-links navbar-right" data-toggle="modal" id="" data-target="#loginModal" onclick="LoginModal()" style="margin-top: 1%;"><i class="fa fa-sign-in fa-fw"></i>Đăng nhập</a>
                }
            </div>
            <!-- /.navbar-top-links -->

        </nav>

        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <div class="rectangle">
                            <a href="/Home/Index" style="color: white"><i class="fa fa-home fa-2x"></i> Trang chủ </a>
                        </div>
                        <div class="triangle-r"></div>
                    </li>
                    <li>
                        <div class="dis">
                            <div class="rectangle">
                                <a href="/Admin" style="color: white"><i class="fa fa-gears fa-2x"></i> Quản trị hệ thống </a>
                            </div>
                            <div class="triangle-r"></div>
                        </div>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="/Admin/Index"><i class="fa fa-bar-chart-o"></i> Thống kê</a>
                            </li>
                            <li>
                                <a href="/Staff/Index"><i class="fa fa-users"></i> Nhân viên</a>
                            </li>
                            <li>
                                <a href="/Fee"><i class="fa fa-exchange"></i> Biểu giá vận chuyển</a>
                            </li>
                            <li>
                                <a href="/Schedule/Index"><i class="fa fa-calendar"></i> Lịch trình xe và tuyến</a>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                </ul>
                <!-- /#side-menu -->
            </div>
            <!-- /.sidebar-collapse -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-8">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- Popup modal -->
    <div id="loginModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
        <div class="modal-dialog">
            <div class="modal-content loginbox">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Thông tin tài khoản</h4>
                </div>
                <div class="modal-body">
                    <div id="accountModal">
                    </div>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div id="registerModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
        <div class="modal-dialog">
            <div class="modal-content regbox">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Thông tin tài khoản</h4>
                </div>
                <div class="modal-body">
                    <div id="newModal">
                    </div>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <footer class="footer">
        <div class="container">
            <p class="pull-right"><a href="">Back to top</a></p>
            <p>© 2014 Company, Inc. · <a href="">Privacy</a> · <a href="">Terms</a></p>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.signalR-2.0.3.js"></script>
    <script src="/signalr/hubs"></script>
    <script type="text/javascript">
        function LoginModal() {
            $.ajax({
                url: "/Account/LogOn",
                type: "Get",
                success: function (result) {
                    $("#accountModal").html(result);
                }
            });
        }

        function RegisterModal() {
            $.ajax({
                url: "/Account/Register",
                type: "Get",
                success: function (result) {
                    $("#newModal").html(result);
                }
            });
        }
    </script>
    <style type="text/css">
        .regbox {
            margin: 10% -20%;
            width: 130%;
            text-align: center;
        }

        .loginbox {
            margin: auto;
            width: 65%;
            text-align: center;
        }

        .modal-title {
            font-weight: bolder;
        }
    </style>
</body>
</html>
